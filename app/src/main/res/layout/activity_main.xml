<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picaso"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <!--画像とテキストを中央でバランス良く位置させるためにLinearLayoutをボタン化-->
        <LinearLayout
            android:id="@+id/linearLayout_search_exhibition"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/frame_style"
            android:gravity="center"
            android:clickable="true">

            <TextView
                android:id="@+id/textView_search_exhibition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/exhibition3"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text=" 美術展を探す"
                android:textColor="#6B6969"
                android:textSize="22sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <LinearLayout
            android:id="@+id/linearLayout_search_museum"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/frame_style"
            android:gravity="center"
            android:clickable="true">>

            <TextView
                android:id="@+id/textView__search_museum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/museum"
                android:gravity="center"
                android:text=" 美術館を探す"
                android:textColor="#6B6969"
                android:textSize="22sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <LinearLayout
            android:id="@+id/linearLayout_search_bookmark"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/frame_style"
            android:gravity="center"
            android:clickable="true">>

            <TextView
                android:id="@+id/textView_search_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/bookmark3"
                android:gravity="center"
                android:text=" お気に入り"
                android:textColor="#6B6969"
                android:textSize="22sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <LinearLayout
            android:id="@+id/linearLayout_search_note"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/frame_style"
            android:gravity="center"
            android:clickable="true">>

            <TextView
                android:id="@+id/textView_search_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/note"
                android:gravity="center"
                android:text=" n o t e"
                android:textColor="#6B6969"
                android:textSize="24sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/textView_artart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ART × ART"
            android:textColor="#F44336"
            android:textSize="48sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
