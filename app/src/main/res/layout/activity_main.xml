<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/picaso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="729dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="1dp">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <!-- ボタンの色・形状を変更済（android:background)-->
        <Button
            android:id="@+id/button_artexhibition"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/frame_style"
            android:drawableStart="@drawable/artexhibition6"
            android:text="美術展を探す"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_Artist"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/frame_style"
            android:text="美術館を探す"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_Bookmark"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/frame_style"
            android:text="お気に入り"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_History"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/frame_style"
            android:text="ノート"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/frame_style" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center|center_horizontal"
            android:text="ART × ART"
            android:textColor="#F10000"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
